                        <input type="file" class="form-control" id="profiles" name="profiles">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>

                <form action="/api/users/{{user._id}}/documents" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="documents" class="form-label">CARGA DE DOCUMENTOS</label>
                        <input type="file" class="form-control" id="documents" name="documents">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>